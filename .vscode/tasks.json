{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "none"
            }
        },
        {
            "dependsOn": "build",
            "label": "download",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "init",
                "-c",
                "\"reset halt\"",
                "-c",
                "\"wait_halt\"",
                "-c",
                "\"flash write_image erase ${workspaceFolder}/build/${config:projectName}.elf\"",
                "-c",
                "reset",
                "-c",
                "shutdown"
            ],
            "problemMatcher": []
        }
    ]
}